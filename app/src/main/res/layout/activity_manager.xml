<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/blue_rectangle_corners"
            android:gravity="right"
            android:paddingTop="30sp"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_marginTop = "35sp"
                android:layout_marginBottom = "5sp"
                android:id="@+id/logOut"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/logout"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin = "5sp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_rectangle_corners"
                android:gravity="right"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight = "0"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Начало:"
                    android:textSize = "16sp"
                    android:textColor = "@color/white"
                    app:fontFamily="@font/roboto_bold" />
                <TextView
                    android:id = "@+id/dateFrom"
                    android:layout_width="match_parent"
                    android:layout_weight = "0"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal = "5sp"
                    android:layout_marginTop = "10sp"
                    android:gravity = "center"
                    android:text=""
                    android:padding = "5sp"
                    android:background = "@drawable/light_rectangle_corners"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin = "5sp"
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_rectangle_corners"
                android:gravity="right"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight = "0"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Конец:"
                    android:textSize = "16sp"
                    android:textColor = "@color/white"
                    app:fontFamily="@font/roboto_bold" />
                <TextView
                    android:id = "@+id/dateTo"
                    android:layout_width="match_parent"
                    android:layout_weight = "0"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text=""
                    android:layout_marginTop = "10sp"
                    android:layout_marginHorizontal = "5sp"
                    android:padding = "5sp"
                    android:background = "@drawable/light_rectangle_corners"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_bold" />
            </LinearLayout>
            <ImageView
                android:layout_marginTop = "35sp"
                android:layout_marginBottom = "5sp"
                android:id="@+id/magnyfingGlass"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/glass"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop = "20sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal = "10sp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/eda"
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/edaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Продукты"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
                <ImageView
                    android:layout_marginTop = "5sp"
                    android:layout_marginBottom = "5sp"
                    android:id="@+id/edaImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/eda"
                    />
                <TextView
                    android:id="@+id/edaPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="0 BYN"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cafe"
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/cafeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Кафе"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
                <ImageView
                    android:layout_marginTop = "5sp"
                    android:layout_marginBottom = "5sp"
                    android:id="@+id/cafeImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/cafe"
                    />
                <TextView
                    android:id="@+id/cafePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="0 BYN"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dosug"
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/dosugName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Досуг"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
                <ImageView
                    android:layout_marginTop = "5sp"
                    android:layout_marginBottom = "5sp"
                    android:id="@+id/dosugImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/dosug"
                    />
                <TextView
                    android:id="@+id/dosugPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="0 BYN"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/transport"
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/transportName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="Транспорт"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
                <ImageView
                    android:layout_marginTop = "5sp"
                    android:layout_marginBottom = "5sp"
                    android:id="@+id/transportImage"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/transport"
                    />
                <TextView
                    android:id="@+id/transportPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="0 BYN"
                    android:textSize = "16sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_medium" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight = "0"
            android:paddingHorizontal = "10sp"
            android:layout_marginTop = "20sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:id="@+id/zdorovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/zdorovieName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="Здоровье"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                    <ImageView
                        android:layout_marginTop = "5sp"
                        android:layout_marginBottom = "5sp"
                        android:id="@+id/zdorovieImage"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/zdorovie"
                        />
                    <TextView
                        android:id="@+id/zdoroviePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="0 BYN"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/semya"
                    android:layout_width="match_parent"
                    android:layout_weight = "1"
                    android:layout_marginTop = "20sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/semyaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="Семья"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                    <ImageView
                        android:layout_marginTop = "5sp"
                        android:layout_marginBottom = "5sp"
                        android:id="@+id/semyaImage"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/semya"
                        />
                    <TextView
                        android:id="@+id/semyaPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="0 BYN"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight = "2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/totalSpending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity = "center"
                    android:text="0 BYN"
                    android:textSize = "32sp"
                    android:textColor = "@color/black"
                    app:fontFamily="@font/roboto_bold" />
                <Button
                    android:id="@+id/changeCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin = "10sp"
                    android:background = "@drawable/black_button"
                    android:gravity = "center"
                    android:text="Change currency"
                    android:textSize = "18sp"
                    android:textColor = "@color/white"
                    app:fontFamily="@font/roboto_bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:id="@+id/podarki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/podarkiName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="Подарки"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                    <ImageView
                        android:layout_marginTop = "5sp"
                        android:layout_marginBottom = "5sp"
                        android:id="@+id/podarkiImage"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/podarki"
                        />
                    <TextView
                        android:id="@+id/podarkiPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="0 BYN"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pokupki"
                    android:layout_width="match_parent"
                    android:layout_weight = "1"
                    android:layout_marginTop = "20sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:id="@+id/pokupkiName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="Покупки"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                    <ImageView
                        android:layout_marginTop = "5sp"
                        android:layout_marginBottom = "5sp"
                        android:id="@+id/pokupkiImage"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/pokupki"
                        />
                    <TextView
                        android:id="@+id/pokupkiPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:text="0 BYN"
                        android:textSize = "16sp"
                        android:textColor = "@color/black"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/resultNotes"
            android:gravity = "center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal = "10sp"
            android:scrollbars="vertical"
            tools:context=".UsersActivity" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>